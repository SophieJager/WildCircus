{% extends 'admin/base.html.twig' %}

{% block title %}Prices index{% endblock %}

{% block body %}
    <h1>Prices index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Days</th>
                <th>Group</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for price in prices %}
            <tr>
                <td>{{ price.id }}</td>
                <td>{{ price.day.name }}</td>
                <td>{{ price.groups.name }}</td>
                <td>{{ price.price }}</td>
                <td>
                    <a href="{{ path('prices_show', {'id': price.id}) }}">show</a>
                    <a href="{{ path('prices_edit', {'id': price.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('prices_new') }}">Create new</a>
{% endblock %}
