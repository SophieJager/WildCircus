{% extends 'base.html.twig' %}

{% block body %}
    <section id="performances">
        <h2>Performances</h2>
        <ul class="horizon">
            <!-- performance 1 -->
            {% for performance in performances %}
                <li class="element">
                    <h3>{{ performance.title }}</h3>
                    <p>{{ performance.description }}</p>
                </li>
            {% endfor %}
        </ul>
        <div class="illustration1">
        </div>
    </section>

    <section id="aboutus">
        <h2>About Us</h2>
        <div class="illustration2">
            <p>{{ aboutus.description }}</p>
        </div>
    </section>



    <section id="prices">
        <h2>Prices</h2>
        <div class="illustration3"></div>
        <table class="table">
            <thead>
            <tr>
                <th></th>
                <th>Week</th>
                <th>Week-End</th>
            </tr>
            </thead>
            <tbody>
            {% for price in prices %}
                <tr>
                    <td>{{ price.groups.name }}</td>
                    <td>{{ price.priceWeek }}</td>
                    <td>{{ price.priceWeekEnd }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </section>

{% endblock %}
